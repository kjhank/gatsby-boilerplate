{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src/",
    "module": "commonjs",
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@templates/*": ["src/templates/*"],
      "@theme/*": ["src/theme/*"],
      "@utils/*": ["src/utils/*"]
    },
    "target": "ES6"
  },
  "exclude": ["node_modules"]
}