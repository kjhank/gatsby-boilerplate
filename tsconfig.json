{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "allowJs": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "react": ["node_modules/@types/react"]
    }
  },
  "exclude": [
    "node_modules",
    "public",
    ".cache"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "./gatsby-*.ts",
    "./gatsby-*.tsx"
  ]
}
